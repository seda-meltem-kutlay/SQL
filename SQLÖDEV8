--Sütunların her birine göre diğer sütunları güncelleyecek 5 adet UPDATE işlemi yapalım.
UPDATE employee
SET
name = 'Eda AKKURT',
birthday = '1996-08-09',
email = 'eda@kurt.com'
WHERE id =1;

UPDATE employee
SET
name = 'Duygu ASLAN',
birthday = '1987-09-07',
email = 'duygu@aslan.com'
WHERE id = 2;

UPDATE employee 
SET
name = 'Ali YILMAZ',
birthday = '1997-11-13',
email = 'ali@yilmaz.com'
WHERE id = 3;

UPDATE employee 
SET
name = 'Damla KALKER',
birthday = '1985-12-12',
email = 'damla@kalker.com'
WHERE id = 4;

UPDATe employee
SET
name = 'Ayşe AK',
birthday = '1999-02-02',
email = 'ayse@ak.com'
WHERE id = 5;

Sütunların her birine göre ilgili satırı silecek 5 adet DELETE işlemi yapalım.
DELETE FROM employee
WHERE id IN(6,8,9,22,45);
RETURNING *;
